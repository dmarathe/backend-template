{
  "name": "backend-template",
  "version": "1.0.0",
  "description": "Backend API for managing a grid-based Tic-Tac-Toe game with matchmaking queue",
  "main": "src/app.js",
  "scripts": {
    "start": "node src/app.js",
    "dev": "npm run migrate:up && nodemon src/app.js",
    "dev:quick": "nodemon src/app.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "migrate:up": "node migrate.js up",
    "migrate:down": "node migrate.js down",
    "migrate:create": "echo 'Create migrations manually in migrations/ directory'"
  },
  "keywords": [
    "api",
    "backend",
    "sqlite",
    "sse"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "helmet": "^7.1.0",
    "node-cron": "^3.0.3",
    "sqlite3": "^5.1.7",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.55.0",
    "jest": "^29.7.0",
    "node-pg-migrate": "^6.2.2",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coveragePathIgnorePatterns": [
      "/node_modules/"
    ],
    "testMatch": [
      "**/tests/**/*.test.js"
    ]
  }
}